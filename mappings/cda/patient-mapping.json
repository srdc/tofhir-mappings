{
  "url": "https://aiccelerate.eu/fhir/mappings/deneme/patient-mapping",
  "name": "patient-mapping",
  "title": "Mapping of condition schema for pilot-3 p3 (HSJD) to AIC-Condition FHIR profile",
  "source": [{
    "alias": "source",
    "url": "https://aiccelerate.eu/fhir/StructureDefinition/patient"
  }],
  "context": {
    "patientConceptMap":  {
      "category": "concept-map",
      "url": "./patient-concept-map.csv"
    }
  },
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Patient",
          "id": "{{mpp:getHashedId('Patient',recordTarget.patientRole.id.`@root`)}}",
          "meta": {
            "profile": [
              "https://aiccelerate.eu/fhir/StructureDefinition/AIC-Patient"
            ],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "active": true,
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{? recordTarget.patientRole.patient.name.given}}"
            }
          ],
          "gender": "{{mpp:getConcept(%patientConceptMap, recordTarget.patientRole.patient.administrativeGenderCode.`@code`, 'source_display')}}",
          "birthDate": "{{(recordTarget.patientRole.patient.birthTime.`@value`).toString().substring(0,4).toString() + '-' + (recordTarget.patientRole.patient.birthTime.`@value`).toString().substring(4,2).toString() + '-' + (recordTarget.patientRole.patient.birthTime.`@value`).toString().substring(6,2).toString()}}",
          "address": {
            "{{#it}}": "{{ recordTarget.patientRole.addr }}",
            "{{?}}": [
              {
              "use": "{{ iif ((%it.`@use`) == 'HP', 'home', 'temp')) }}",
              "type": "both",
              "postalCode": "{{ %it.postalCode.toString()}}",
              "country": "{{ %it.country.toString()}}"
              }
            ]
          }
        }
      }
    }
  ]
}